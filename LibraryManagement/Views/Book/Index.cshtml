@model IEnumerable<LibraryManagement.Models.Book>

@{
    ViewData["Title"] = "Book Page";
}

<h1>Book List</h1>
<br />
<div class="row">
    <div class="col-md-4">
        <form method="get">
            <div class="form-group">
                <label for="category">Select Category:</label>
                <select name="category" class="form-control" id="category" onchange="this.form.submit()">
                    <option value="">All Categories</option>
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.CategoryName">@category.CategoryName</option>
                    }
                </select>
            </div>
        </form>
    </div>
</div>
<br />

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublishedYear)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublishedYear)
                </td>
                <td>
                    @* @Html.ActionLink("Edit", "Edit", new {  /* id=item.Id */ }) | *@
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })

                </td>
            </tr>
        }
    </tbody>
</table>
